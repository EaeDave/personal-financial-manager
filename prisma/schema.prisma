generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Account {
  id        String   @id @default(cuid())
  name      String
  type      String   // checking, savings, investment, cash
  balance   Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([type])
  @@map("accounts")
}

model CreditCard {
  id         String   @id @default(cuid())
  name       String
  limit      Float
  closingDay Int
  dueDay     Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("credit_cards")
}

model Bill {
  id          String   @id @default(cuid())
  description String
  amount      Float
  dueDate     String
  frequency   String   // once, weekly, monthly, yearly
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([frequency])
  @@map("bills")
}
