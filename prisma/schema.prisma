generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id           String              @id @default(cuid())
  name         String
  type         String // checking, savings, investment, cash
  balance      Float
  createdAt    DateTime            @default(now())
  updatedAt    DateTime            @updatedAt
  transactions FinancialMovement[]

  @@index([type])
  @@map("accounts")
}

model CreditCard {
  id           String                  @id @default(cuid())
  name         String
  limit        Float
  closingDay   Int
  dueDay       Int
  createdAt    DateTime                @default(now())
  updatedAt    DateTime                @updatedAt
  transactions CreditCardTransaction[]

  @@map("credit_cards")
}

model CreditCardTransaction {
  id                 String     @id @default(cuid())
  description        String
  amount             Float
  date               DateTime   @default(now())
  installments       Int        @default(1)
  currentInstallment Int        @default(1)
  category           Category?  @relation(fields: [categoryId], references: [id])
  categoryId         String?
  creditCardId       String
  creditCard         CreditCard @relation(fields: [creditCardId], references: [id], onDelete: Cascade)
  createdAt          DateTime   @default(now())
  updatedAt          DateTime   @updatedAt

  @@index([creditCardId])
  @@index([categoryId])
  @@map("credit_card_transactions")
}

model Bill {
  id          String   @id @default(cuid())
  description String
  amount      Float
  dueDate     String
  frequency   String // once, weekly, monthly, yearly
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([frequency])
  @@map("bills")
}

model FinancialMovement {
  id          String   @id @default(cuid())
  description String
  amount      Float
  date        DateTime @default(now())
  accountId   String
  account     Account  @relation(fields: [accountId], references: [id], onDelete: Cascade)
  category    Category? @relation(fields: [categoryId], references: [id])
  categoryId  String?
  type        String // INCOME or EXPENSE
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([accountId])
  @@index([categoryId])
  @@map("financial_movements")
}

model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  color     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  financialMovements    FinancialMovement[]
  creditCardTransactions CreditCardTransaction[]

  @@map("categories")
}
